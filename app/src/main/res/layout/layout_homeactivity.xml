<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Action.HomeActivity"
    android:orientation="vertical"

    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:id="@+id/layouttk"
        android:layout_above="@+id/viewpg">
        <ImageView
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/icon_tk"/>
    <EditText
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:id="@+id/edtsearch"/>
    </LinearLayout>
    <ListView
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:id="@+id/lvhome"/>
    <androidx.viewpager.widget.ViewPager
        android:layout_width="match_parent"
        android:layout_height="460dp"
        android:id="@+id/viewpg"
        />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/bottom"
        app:menu="@menu/menu_navigation"
        app:itemTextColor="@color/color_navigation"
        app:itemIconTint="@color/color_navigation"
        android:background="@color/design_default_color_on_primary"
        app:labelVisibilityMode="labeled"
        />


</LinearLayout>